@model OpticSolutions.Models.RegisterModel
@{
    ViewBag.Title = "Registro";
    Layout = null;
}


<html>
<head>
   
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme  -->
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- //font-awesome icons -->
    <script src="~/Content/js/plugins/jquery/jquery-2.2.4.min.js"></script>
    <link href="//fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
    <link href="~/Content/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/Content/js/plugins/datepicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <link rel="icon" href="@Url.Content("~/content/favicon.ico")" />


</head>
<body>
    <div class="login-form w3_form">
        <!--  Title-->
        <div class="login-title w3_title">
            <h1 style="color:black">Optic<strong>Solutions</strong></h1>
        </div>
        <div class="login w3_login">
            <h2 class="login-header w3_header">Register</h2>
            <div></div>
            <div class="w3l_grid">
                @*<img class="logo-mini centerImage"  src="~/OSContent/img/Optic solutions logo.png" style="height:150px; width:auto" />*@
                @*<form class="login-container" action="#" method="post">
                    <label for="FirstName">Nombre</label>
                    <input type="text" id="FirstName" placeholder="First Name" class="form-control" >

                    <label>Apellido</label>
                    <input type="text" id="LastName" placeholder="Last Name" class="form-control" />
                    
                    <label>Fecha de Nacimiento</label>
                    <input type="date" id="birthDate" class="form-control">
                    
                    <label>Correo</label>
                    <input type="email" placeholder="Email" Name="Email" required="">
                    
                    <label>Contraseña</label>
                    <input type="password" placeholder="Password" Name="password" required=""> 
                    
                    <label>Telefono</label>
                    <input type="number" placeholder="Number" name="Number"/>
                    
                    <input type="submit" value="Registrar">
                </form>*@

                @Html.ValidationSummary(false)

                @using (Html.BeginForm())
                {
                   
                        <div class="editor-label"><label for="Email">Correo</label></div>
                        <div class="editor-field"><input class="text-box single-line" data-val="true" data-val-required="El campo email es obligatorio." id="Email" name="Email" value="" type="email"> <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span></div>
                       
                        <div class="editor-label"><label for="FirstName">Nombre</label></div>
                        <div class="editor-field"><input class="text-box single-line" data-val="true" data-val-required="El campo nombre es obligatorio." id="FirstName" name="FirstName" value="" type="text"> <span class="field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span></div>
                        
                        <div class="editor-label"><label for="LastName">Apellido</label></div>
                        <div class="editor-field"><input class="text-box single-line" data-val="true" data-val-required="El campo apellido es obligatorio." id="LastName" name="LastName" value="" type="text"> <span class="field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span></div>

                        <div class="editor-label"><label for="Password">Contraseña</label></div>
                        <div class="editor-field"><input class="text-box single-line password" data-val="true" data-val-required="El campo contraseña es obligatorio." id="Password" name="Password" value="" type="password"> <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span></div>

                        <div class="editor-label"><label for="ConfirmPassword">Confirmar Contraseña</label></div>
                        <div class="editor-field"><input class="text-box single-line password" data-val="true" data-val-required="El campo de confirmacion es obligatorio." id="ConfirmPassword" name="ConfirmPassword" value="" type="password"> <span class="field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span></div>

                        <div class="editor-label"><label for="CreatedDate">Fecha de nacimiento</label></div>
                        <div class="editor-field"><input class="text-box single-line" data-val="true" data-val-date="The field CreatedDate must be a date." data-val-required="El campo fecha de nacimiento es obligatorio." id="BirthDate" name="BirthDate" value="" type="date"> <span class="field-validation-valid" data-valmsg-for="CreatedDate" data-valmsg-replace="true"></span></div>
                        
                        <div class="editor-label"><label for="Phone">Telefono</label></div>
                        <div class="editor-field"><input class="text-box single-line" data-val="true" data-val-required="El campo Phone es obligatorio." id="Phone" name="Phone" value="" type="text"> <span class="field-validation-valid" data-valmsg-for="Phone" data-valmsg-replace="true"></span></div>
                        
                        <p>
                            <button type="submit" class="btn btn-success">Registrar</button>
                        </p>
               
            
                }

             

            </div>
        </div>

    </div>


    <div class="footer-w3l">
        <p class="agile"> &copy; 2017 OpticSolutions . All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </div>
</body>
</html>