@using WebHelpers.Mvc5
<aside class="main-sidebar">
    <section class="sidebar">


        <div class="user-panel">
            <div class="pull-left image">
                <img src="@Url.Action("UserPhotos", "Base" )" class="img-circle" alt="User Image" style="height:30px; width:35px">
            </div>
            <div class="pull-left info">
                @{
                    System.Security.Claims.ClaimsIdentity user = (System.Security.Claims.ClaimsIdentity)(User.Identity);
                    foreach (var item in user.Claims)
                    {
                        if (item.Type == "FullName")
                        {
                            <p>@item.Value</p>
                        }
                    }
                }


                @*<a href="#"><i class="fa fa-circle text-success"></i> 
                @{
                   OpticSolutions.Controllers.AuthController.GetUserRole(User.Identity.Name).ToString();

                }
                </a>*@
            </div>
        </div>


    
        @if (User.IsInRole("Administrador"))
        {
            @Html.Partial("~/Views/Shared/Menu/_AdminMenu.cshtml");
        }
        else if (User.IsInRole("Doctor(a)"))
        {
            @Html.Partial("~/Views/Shared/Menu/_DoctorMenu.cshtml");
        }
        else if (User.IsInRole("Secretario(a)"))
        {
            @Html.Partial("~/Views/Shared/Menu/_AssistantMenu.cshtml");
        }
     


    </section>
</aside>