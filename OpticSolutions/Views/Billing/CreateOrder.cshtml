<div class="container">

    <div class="jumbotron">
        <h1>Facturacion <i class="fa fa-dollar"></i></h1>

    </div>


    <div class="box box-primary box-solid ">
        <div class="box-header">
            <p class="box-title">Agregar productos y/o servicios</p>

        </div>
        <div class="box-body">

            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-7">
                        <label for="productSelect">Producto</label>
                        <select style="width:100%" id="productSelect" name="productSelect"></select>

                    </div>
                    <div class="col-xs-2">
                        <label for="quantity">Cantidad</label>
                        <input type="number" value="1" id="quantity" name="quantity" />
                    </div>


                    <div class="col-xs-2">

                        <div class="input-group">

                            <label for="price">Modificar precio</label>
                            <input type="number" id="itemPrice" name="price" />
                        </div>
                    </div>
                    <div class="col-xs-1">
                        <br />
                        <button class="btn btn-primary plusButton" type="submit" name="plusButton">
                            <i class="glyphicon glyphicon-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="box box-success ">
        <div class="box-header">
            <p class="box-title">
                Lista de productos
            </p>

        </div>
        <div class="box-body">
            <ul id="billDetail" class="list-group pad">
                <li class="list-group-item list-group-item-info">
                    <div class="row">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-3">
                            <b>Descripcion</b>
                        </div>
                        <div class="col-xs-2 text-center">
                            <b>Cantidad</b>
                        </div>
                        <div class="col-xs-2 text-right">
                            <b>Precio Unitario</b>
                        </div>
                        <div class="col-xs-2 text-right">
                            <b>ITBIS</b>
                        </div>
                        <div class="col-xs-2 text-right">
                            <b>Valor</b>
                        </div>
                    </div>
                </li>



            </ul>

            <hr />
        </div>

        <ul id="" class="list-group pad">
            <li class="list-group-item list-group-item-success">
                <div class="row">
                    <div class="col-xs-1"></div>
                    <div class="col-xs-3">
                        @*<b>Producto</b>*@
                    </div>
                    <div class="col-xs-2 text-center">
                        @*<b>Cantidad</b>*@
                    </div>
                    <div class="col-xs-2 text-right">

                    </div>
                    <div class="col-xs-2 text-right">
                        <b>Total ITBIS: </b><span id="Itbis">0</span>
                    </div>

                    <div class="col-xs-2 text-right">
                        <b>Subtotal: </b><span id="Subtotal">0</span><br />
                        <b>Total: </b> <span id="Total">0</span>

                    </div>
                </div>
            </li>
        </ul>
    </div>



    <div class="box box-primary ">
        <div class="box-header">


        </div>
        <div class="box-body">

            <div class="row">
                <div class="col-md-6">
                    <br />
                    <label for="clientSelect">Cliente y/o paciente:</label>
                    <select style="width:100%" id="clientSelect" name="clientSelect"></select>
                    <br/>
                    <label for="Insurance">Aseguradora:</label>
                    <input name="Insurance" id="Insurance" type="text" class="form-control" />


                </div>
                <div class="col-md-4">
                    <br />
                    <label for="PaymentMethod">Metodo de pago:</label>
                    <select style="width:100%" class="pad" id="PaymentMethod" name="PaymentMethod.Id">
                        <option value="1">
                            Efectivo
                        </option>
                        <option value="2">
                            Tarjeta de credito
                        </option>
                    </select>
                    <br />
                
                </div>
                <div class="col-md-2">
                    <br /><br />
                    <input type="button" class="btn btn-success btn-lg" id="confirmOrder" value="Completar orden" />
                </div>

            </div>

        </div>
    </div>




</div>


        <script src="~/Content/js/plugins/jquery/jquery-2.2.4.min.js"></script>

        <script type="text/javascript">

            $(document).ready(function () {


                var subtotal = 0;
                var total = 0;
                var itbis = 0;

                //Si se desea cambiar precio de producto o servicio

                $('#isModified').click(function () {
                    var checked = $(this).attr('checked');
                    alert(checked);
                    if (checked) {
                        $(this).attr('checked', false);
                    }
                    else {
                        $(this).attr('checked', true);
                    }
                });

             
            

        //boton de confirmar orden

                $("#confirmOrder").on("click", function ()
                {
                    var productList = $(".ProductId");
                    var quantityList = $(".ProductQuantity");
                    var priceList = $(".ProductPrice");



                    console.log("completar orden");
                    var itemsList = [];

                    $.each(productList, function (i, item)
                    {

                        var itemId = item.value;
                        var itemQuantity = quantityList[i].value;
                        var itemPrice = priceList[i].value;

                        itemsList.push({ "ProductId": itemId, "Quantity": itemQuantity, "Price": itemPrice });
                    });


                    var client = { ClientId: $("#clientSelect").val() };
                    var paymentMethod = { Id: $("#PaymentMethod").val() };
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("CompleteOrder", "Billing")',
                        data: { OrderDetails: itemsList, PaymentMethod: paymentMethod, Client: client }
                    });

                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetOrderId", "Billing")',
                        success: function (data) {
                            var url = ' @Url.Action("ViewOrder", "Billing")';
                            console.log(url);
                            console.log(data);
                            window.location.href = url + "?OrderId=" + data;
                        }

                    });
                });


                    //boton de borrar producto
                    $('#billDetail').on('click', '.btn-delete', function ()
                    {
                        console.log("click delete");

                        var prod = $(this).closest("li").find('.ProductPrice').val();
                        var qua = $(this).closest("li").find('.ProductQuantity').val();


                        subtotal = subtotal - (prod * qua);
                        total = subtotal * 1.18;
                        itbis = total - subtotal;



                        $("#Subtotal").html(subtotal);
                        $("#Total").html(total);
                        $("#Itbis").html(itbis);

                        $(this).closest("li").remove();

                    });



                    //botton de agregar producto
                    $(".plusButton").on("click", function () {

                        var id = $("#productSelect").val();
                        var priceModified = $("#itemPrice").val();
                        var exist = $(".productId" + id);


                        //var priceHidden = $(".productId" + id).find('.ProductPrice');
                        var quantityHidden = $(".productId" + id).find('.ProductQuantity');



                        if (exist.length > 0) {
                            console.log("No ajax");
                            var plusQuantity = Math.abs($("#quantity").val())
                            var quantity = parseInt($(".productId" + id + " .quantity").html());
                            var price = parseInt($(".productId" + id + " .price").html());
                            var itbis = parseInt($(".productId" + id + " .itbis").html());
                            var total = parseInt($(".productId" + id + " .total").html());

                            //para pintar en el row de item
                            var newQuantity = quantity + plusQuantity;
                            var newItbis = price * newQuantity * 0.18;
                            var newTotal = price * newQuantity;

                            quantityHidden.val(newQuantity);

                            $(".productId" + id + " .quantity").html(newQuantity);
                            $(".productId" + id + " .itbis").html(newItbis);
                            $(".productId" + id + " .total").html(newTotal);


                            var plusTotal = plusQuantity * price * 1.18;

                            console.log(plusTotal);
                            subtotal = subtotal + plusQuantity * price;


                            total = subtotal * 1.18;
                            itbis = total - subtotal;


                            $("#Subtotal").html(subtotal);
                            $("#Total").html(total);
                            $("#Itbis").html(itbis);
                        }
                        else {
                            $.ajax({
                                type: 'GET',
                                url: '@Url.Action("GetProductById", "Products")',
                                data: { ProductId: id },

                                success: function (data) {


                                    var prod = data;

                                    if (priceModified != 0)
                                    {
                                        prod.Price = priceModified;
                                    }

                                    var cantidad = Math.abs($("#quantity").val());

                                    var html = ' <li class="list-group-item productDetail productId' + prod.ProductId + '" >' +
                                        ' <!-- Modelo -->' +
                                        ' <input type="hidden" class="ProductId" name="ProductId" value=' + prod.ProductId + '>' +
                                        ' <input type="hidden" class="ProductQuantity" name="Quantity" value=' + cantidad + '>' +
                                        ' <input type="hidden" class="ProductPrice" name="ProductPrice" value=' + prod.Price + '>' +
                                        ' <div class="row">' +
                                        '<div class="col-xs-1 text-right">' +
                                        '  <button class="btn btn-danger  btn-block btn-delete" type="submit" >' +
                                        '<i class="glyphicon glyphicon-remove"></i>' +
                                        ' </button>' +
                                        ' </div>' +
                                        '  <div class="col-xs-3">' +
                                        prod.Name +
                                        ' </div>' +
                                        '<div class="col-xs-2 text-center quantity">' +
                                        cantidad +
                                        '  </div>' +
                                        ' <div class="col-xs-2 text-right price">' +
                                        +prod.Price +
                                        '  </div>' +
                                        '<div class="col-xs-2 text-right itbis">' +
                                        prod.Price * 0.18 * cantidad +
                                        ' </div>' +
                                        '<div class="col-xs-2 text-right total">' +
                                        prod.Price * cantidad +
                                        ' </div>' +
                                        '</div>' +
                                        ' </li>    ';
                                    $("#billDetail").append(html);



                                    subtotal = subtotal + (prod.Price * cantidad);



                                    total = subtotal * 1.18;
                                    itbis = total - subtotal;


                                    $("#Subtotal").html(subtotal);
                                    $("#Total").html(total);
                                    $("#Itbis").html(itbis);
                                }
                            });

                        }

                        $("#itemPrice").val(0);

                    });

                    //Ajax para llenar lista de productos
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetProducts", "Products")',

                        success: function (data) {

                            $("#productSelect").empty();


                            $.each(data, function (index, item) {
                                var userName = item.UserName;
                                var p = new Option(item.Name + " - $" + item.Price, item.ProductId);

                                $("#productSelect").append(p);

                            });
                            //$("#doctorSelect").val(selected);
                        }
                    });


                  //Ajax para llenar lista de clientes
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetClients", "Clients")',

                        success: function (data) {

                            $.each(data, function (index, item) {

                                var p = new Option(item.Names+ " " + item.Last_Names, item.ClientId);

                                $("#clientSelect").append(p);

                            });

                        }
                    });




    });



        </script>
