<script src="~/Content/js/plugins/jquery/jquery-2.2.4.min.js"></script>

<script type="text/javascript">

            $(document).ready(function () {


                var subtotal = 0;
                var total = 0;
                var itbis = 0;


        //boton de confirmar orden

                $("#confirmOrder").on("click", function ()
                {
                    var productList = $(".ProductId");
                    var quantityList = $(".ProductQuantity");
                    var priceList = $(".ProductPrice");



                    console.log("completar orden");
                    var itemsList = [];

                    $.each(productList, function (i, item)
                    {

                        var itemId = item.value;
                        var itemQuantity = quantityList[i].value;
                        var itemPrice = priceList[i].value;

                        itemsList.push({ "ProductId": itemId, "Quantity": itemQuantity, "Price": itemPrice });
                    });


                    var client = { ClientId: $("#clientSelect").val() };
                    var paymentMethod = { Id: $("#PaymentMethod").val() };
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("CompleteOrder", "Billing")',
                        data: { OrderDetails: itemsList, PaymentMethod: paymentMethod, Client: client }
                    });

                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetOrderId", "Billing")',
                        success: function (data) {
                            var url = ' @Url.Action("ViewOrder", "Billing")';
                            console.log(url);
                            console.log(data);
                            window.location.href = url + "?OrderId=" + data;
                        }

                    });
                });


                    //boton de borrar producto
                    $('#billDetail').on('click', '.btn-delete', function ()
                    {
                        console.log("click delete");

                        var prod = $(this).closest("li").find('.ProductPrice').val();
                        var qua = $(this).closest("li").find('.ProductQuantity').val();


                        subtotal = subtotal - (prod * qua);
                        total = subtotal * 1.18;
                        itbis = total - subtotal;



                        $("#Subtotal").html(subtotal);
                        $("#Total").html(total);
                        $("#Itbis").html(itbis);

                        $(this).closest("li").remove();

                    });



                    //botton de agregar producto
                    $(".plusButton").on("click", function () {

                        var id = $("#productSelect").val();
                        var exist = $(".productId" + id);


                        //var priceHidden = $(".productId" + id).find('.ProductPrice');
                        var quantityHidden = $(".productId" + id).find('.ProductQuantity');



                        if (exist.length > 0) {
                            console.log("No ajax");
                            var plusQuantity = Math.abs($("#quantity").val())
                            var quantity = parseInt($(".productId" + id + " .quantity").html());
                            var price = parseInt($(".productId" + id + " .price").html());
                            var itbis = parseInt($(".productId" + id + " .itbis").html());
                            var total = parseInt($(".productId" + id + " .total").html());

                            //para pintar en el row de item
                            var newQuantity = quantity + plusQuantity;
                            var newItbis = price * newQuantity * 0.18;
                            var newTotal = price * newQuantity;

                            quantityHidden.val(newQuantity);

                            $(".productId" + id + " .quantity").html(newQuantity);
                            $(".productId" + id + " .itbis").html(newItbis);
                            $(".productId" + id + " .total").html(newTotal);


                            var plusTotal = plusQuantity * price * 1.18;

                            console.log(plusTotal);
                            subtotal = subtotal + plusQuantity * price;


                            total = subtotal * 1.18;
                            itbis = total - subtotal;


                            $("#Subtotal").html(subtotal);
                            $("#Total").html(total);
                            $("#Itbis").html(itbis);
                        }
                        else {
                            $.ajax({
                                type: 'GET',
                                url: '@Url.Action("GetProductById", "Products")',
                                data: { ProductId: id },

                                success: function (data) {


                                    var prod = data;
                                    var cantidad = Math.abs($("#quantity").val());

                                    var html = ' <li class="list-group-item productDetail productId' + prod.ProductId + '" >' +
                                        ' <!-- Modelo -->' +
                                        ' <input type="hidden" class="ProductId" name="ProductId" value=' + prod.ProductId + '>' +
                                        ' <input type="hidden" class="ProductQuantity" name="Quantity" value=' + cantidad + '>' +
                                        ' <input type="hidden" class="ProductPrice" name="ProductPrice" value=' + prod.Price + '>' +
                                        ' <div class="row">' +
                                        '<div class="col-xs-1 text-right">' +
                                        '  <button class="btn btn-danger  btn-block btn-delete" type="submit" >' +
                                        '<i class="glyphicon glyphicon-remove"></i>' +
                                        ' </button>' +
                                        ' </div>' +
                                        '  <div class="col-xs-3">' +
                                        prod.Name +
                                        ' </div>' +
                                        '<div class="col-xs-2 text-center quantity">' +
                                        cantidad +
                                        '  </div>' +
                                        ' <div class="col-xs-2 text-right price">' +
                                        +prod.Price +
                                        '  </div>' +
                                        '<div class="col-xs-2 text-right itbis">' +
                                        prod.Price * 0.18 * cantidad +
                                        ' </div>' +
                                        '<div class="col-xs-2 text-right total">' +
                                        prod.Price * cantidad +
                                        ' </div>' +
                                        '</div>' +
                                        ' </li>    ';
                                    $("#billDetail").append(html);



                                    subtotal = subtotal + (prod.Price * cantidad);



                                    total = subtotal * 1.18;
                                    itbis = total - subtotal;


                                    $("#Subtotal").html(subtotal);
                                    $("#Total").html(total);
                                    $("#Itbis").html(itbis);
                                }
                            });

                        }



                    });

                    //Ajax para llenar lista de productos
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetProducts", "Products")',

                        success: function (data) {

                            $("#productSelect").empty();
 

                            $.each(data, function (index, item) {
                                var userName = item.UserName;
                                var p = new Option(item.Name + " - $" + item.Price, item.ProductId);

                                $("#productSelect").append(p);

                            });
                            //$("#doctorSelect").val(selected);
                        }
                    });


                  //Ajax para llenar lista de clientes
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("GetClients", "Clients")',

                        success: function (data) {

                            $.each(data, function (index, item) {
                               
                                var p = new Option(item.Names+ " " + item.Last_Names, item.ClientId);

                                $("#clientSelect").append(p);

                            });
                   
                        }
                    });




    });



</script>
